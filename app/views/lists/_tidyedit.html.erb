      <div class="dummycolumn">
        .<br>.<br>.<br>
      </div>

        <div class="column1_header">
          <div class="alignleft_header">
            <center><h1><%= @list.name %></h1></center>
          </div>
          <div class="alignright_header">
            <br>
            <% @list.users.each do |user| %>
              <img class="photo" src="<%= user.imgurl %>">
            <% end %>
            <% if can? :update, @list %>
              <%= link_to image_tag("plus.png", :class=> "photo"), new_list_invite_path(@list.id) %>
              <%= link_to image_tag("edit_icon.png", :class => "edit"), edit_list_path(@list.id) %>
            <% end %>
          </div>
          
          <div style="clear: both;"></div>
      </div>
  
      <div class="column1_line">
          <center>
            <h2>Daily</h2>
            <%= link_to 'Create a new Daily chore.', new_list_chore_path(@list) %>
            </center>
          <% @daily_chores.each_slice(slice_count(@daily_chores.count)) do |chores| %>
            <div class="minicolumn">
              <% chores.each do |chore| %>
                <% if chore.time_of_day == "morning" %>
                  <div class="chore_edit_daily">
                    ☀ <%= chore.name %>
                    <br>| <%= link_to 'Edit', edit_list_chore_path(@list, chore) %> |    | <%= link_to "Delete", list_chore_path(@list, chore), :method => "delete", :class => "destroy" %> |
                  </div>
                <% elsif chore.time_of_day == "evening" %>
                  <div class="chore_edit_daily">
                    ☾ <%= chore.name %>
                    <br>| <%= link_to 'Edit', edit_list_chore_path(@list, chore) %> |    | <%= link_to "Delete", list_chore_path(@list, chore), :method => "delete", :class => "destroy" %> |
                  </div>
                <% else %>
                  <div class="chore_edit_daily">
                    <%= chore.name %>                    
                    <br>| <%= link_to 'Edit', edit_list_chore_path(@list, chore) %> |    | <%= link_to "Delete", list_chore_path(@list, chore), :method => "delete", :class => "destroy" %> |
                  </div>
                <% end %>
              <% end %>
            </div>
        <% end %>
      </div>

      <div class="column1_line">
        <center>
          <h2>Weekly</h2>
          Complete 2 today to stay on track.
        </center>
          <% @weekly_chores.each_slice(slice_count(@weekly_chores.count)) do |chores| %>
            <div class="minicolumn">
              <% chores.each do |chore| %>
                <div class="chore_edit_weekly">
                  <%= chore.name %>
                  <br>| <%= link_to 'Edit', edit_list_chore_path(@list, chore) %> |    | <%= link_to "Delete", list_chore_path(@list, chore), :method => "delete", :class => "destroy" %> |
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

      <div class="column1_line">
        <center>
          <h2>Monthly</h2>
          Complete 1 today to stay on track.
        </center>
          <% @monthly_chores.each_slice(slice_count(@monthly_chores.count)) do |chores| %>
            <div class="minicolumn">
              <% chores.each do |chore| %>
                <div class="chore_edit_monthly">
                  <%= chore.name %>
                  <br>| <%= link_to 'Edit', edit_list_chore_path(@list, chore) %> |    | <%= link_to "Delete", list_chore_path(@list, chore), :method => "delete", :class => "destroy" %> |
                </div>
              <% end %>
            </div>
        <% end %>
      </div>
      
    </div>
          
